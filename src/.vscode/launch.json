    "version": "0.2.0",
    "configurations": [

        {
            "name": "Decodeur",
            "type": "gdb",
            "request": "attach",
            "gdbpath": "${env:HOME}/arm-cross-comp-env/arm-raspbian-linux-gnueabi/bin/arm-raspbian-linux-gnueabi-gdb",
            "executable": "./build/decodeur",
            "target": "inserer_adresse_de_votre_raspberry_pi_ici:4560",
            "remote": true,
            "autorun": [
                "set sysroot ${env:HOME}/arm-cross-comp-env/arm-raspbian-linux-gnueabi/arm-raspbian-linux-gnueabi/sysroot/"
            ],
            "cwd": "${workspaceFolder}",
            "preLaunchTask": "syncAndStartGDBdecodeur"
        },

        {
            "name": "Decodeur FDM",
            "type": "cppdbg",
            "request": "launch",
            "program": "./build/decodeur",
            "miDebuggerServerAddress": "192.168.43.240:4560",
            "miDebuggerPath": "${env:HOME}/arm-cross-comp-env/arm-raspbian-linux-gnueabi/bin/arm-raspbian-linux-gnueabi-gdb",
            "targetArchitecture": "arm64",
            "cwd": "${workspaceRoot}",
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
              {
                "description": "Enable pretty-printing for gdb",
                "text": "-enable-pretty-printing",
                "ignoreFailures": true
              },
              {
                "description": "Set follow-fork-mode to child",
                "text": "set follow-fork-mode child"
              },
              {
                "description": "Set detach-on-fork off",
                "text": "set detach-on-fork off"
              }
            ],
            "preLaunchTask": "syncAndStartGDBdecodeur" 
        },

        {
            "name": "Compositeur",
            "type": "gdb",
